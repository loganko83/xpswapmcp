# Security Configuration
HTTPS=true
SSL_CERT=/etc/ssl/certs/server.crt
SSL_KEY=/etc/ssl/private/server.key
MACHINE_ID=production-server-001
VALID_API_KEYS=xps_prod_key_001,xps_prod_key_002,xps_prod_key_003

# Security Level Settings
SECURITY_LEVEL=ENHANCED
RATE_LIMIT_ENABLED=true
IP_REPUTATION_ENABLED=true
CRYPTO_SECURITY_LEVEL=HIGH

# Error Handling Settings
ERROR_LEAK_PREVENTION=true
DETAILED_ERRORS=false
SECURITY_LOGGING=true

# Base Path Configuration
BASE_PATH=/xpswap

# CORS Settings
ALLOWED_ORIGINS=https://trendy.storydot.kr,https://xpswap.com,https://app.xpswap.com

# Centralized Logging Configuration
LOG_LEVEL=info

# Elasticsearch Configuration (for ELK Stack)
ELASTICSEARCH_NODE=https://your-elasticsearch-host:9200
ELASTICSEARCH_USER=elastic
ELASTICSEARCH_PASSWORD=your_secure_password
ELASTICSEARCH_INDEX_PREFIX=xpswap

# Alternative: Splunk Configuration
# SPLUNK_HOST=your-splunk-host
# SPLUNK_PORT=8088
# SPLUNK_TOKEN=your_splunk_hec_token
# SPLUNK_INDEX=xpswap_prod

# Monitoring and Alerting
SLACK_SECURITY_WEBHOOK=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
EMAIL_ALERT_TO=security@xpswap.com
EMAIL_ALERT_FROM=alerts@xpswap.com

# Sentry Error Tracking
SENTRY_DSN=https://your_sentry_dsn@sentry.io/project_id

# Prometheus Metrics
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090

# Log Retention
LOG_RETENTION_DAYS=30
LOG_MAX_SIZE=10m

# Instance Identification
INSTANCE_ID=xpswap-prod-001
DEPLOYMENT_ENV=production
REGION=ap-northeast-2

# SSL/TLS Configuration
TLS_MIN_VERSION=1.2
ENABLE_HTTP2=true
ENABLE_OCSP_STAPLING=true

# Security Headers Configuration
HSTS_MAX_AGE=31536000
HSTS_INCLUDE_SUBDOMAINS=true
HSTS_PRELOAD=true
CSP_REPORT_URI=https://xpswap.com/api/security/csp-report

# Mixed Content Prevention
FORCE_HTTPS=true
UPGRADE_INSECURE_REQUESTS=true

# Additional Security Measures
ENABLE_CERTIFICATE_PINNING=false
ENABLE_DNS_CAA=true
CERTIFICATE_TRANSPARENCY=true
