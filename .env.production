# XPSwap 프로덕션 환경 설정
# 실제 운영에서는 모든 플레이스홀더를 실제 값으로 교체하세요

# 데이터베이스 설정
DATABASE_URL=sqlite:./test.db

# API 키 (프로덕션 - 실제 키로 교체 필요)
COINMARKETCAP_API_KEY=YOUR_COINMARKETCAP_API_KEY_HERE
SESSION_SECRET=CHANGE_THIS_TO_SECURE_RANDOM_STRING

# 프로덕션 환경 설정
NODE_ENV=production

# Xphere 네트워크 설정
XPHERE_RPC_URL=https://www.ankr.com/rpc/xphere/
XPHERE_CHAIN_ID=20250217

# 스마트 컨트랙트 설정 (프로덕션 - 실제 메인넷 키 필요)
DEPLOYER_PRIVATE_KEY=YOUR_MAINNET_PRIVATE_KEY_HERE
GAS_PRICE=20000000000
GAS_LIMIT=8000000
REPORT_GAS=false

# 컨트랙트 주소 (실제 배포된 주소로 업데이트)
XPS_TOKEN_ADDRESS=
DEX_ROUTER_ADDRESS=
LIQUIDITY_POOL_ADDRESS=

# 프로덕션 서버 설정
PORT=5000
HOST=0.0.0.0
BASE_PATH=/xpswap

# 보안 설정 (프로덕션 환경)
HTTPS=true
SECURITY_LEVEL=PRODUCTION
RATE_LIMIT_ENABLED=true
IP_REPUTATION_ENABLED=true
CRYPTO_SECURITY_LEVEL=HIGH

# 에러 처리 설정 (프로덕션)
ERROR_LEAK_PREVENTION=true
DETAILED_ERRORS=false
SECURITY_LOGGING=true

# 외부 API 설정 (프로덕션 - 실제 키로 교체 필요)
VITE_INFURA_API_URL=https://mainnet.infura.io/v3/YOUR_INFURA_PROJECT_ID
VITE_ALCHEMY_API_URL=https://eth-mainnet.alchemyapi.io/v2/YOUR_ALCHEMY_API_KEY
VITE_LIFI_API_KEY=YOUR_LIFI_API_KEY

# SSL 인증서 경로 (프로덕션에서 설정)
SSL_CERT_PATH=/etc/ssl/certs/xpswap.crt
SSL_KEY_PATH=/etc/ssl/private/xpswap.key
