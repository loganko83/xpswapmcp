{
  "name": "xpswap-dex",
  "version": "1.0.0",
  "description": "XPSwap - Decentralized Exchange on Xphere Blockchain",
  "private": true,
  "type": "module",
  "license": "MIT",
  "author": "XPSwap Team",
  "repository": {
    "type": "git",
    "url": "https://github.com/YOUR-USERNAME/xpswap-dex.git"
  },
  "scripts": {
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:server": "tsx watch server/index.ts",
    "dev:client": "vite",
    "build": "npm run build:client && npm run build:server",
    "build:client": "vite build",
    "build:server": "esbuild server/index.ts --platform=node --packages=external --bundle --format=esm --outdir=dist",
    "start": "NODE_ENV=production node dist/index.js",
    "preview": "vite preview",
    "typecheck": "tsc --noEmit",
    "lint": "eslint . --ext .ts,.tsx",
    "deploy": "npm run build && pm2 restart xpswap-api",
    "pm2:start": "pm2 start ecosystem.config.js",
    "pm2:stop": "pm2 stop xpswap-api",
    "pm2:restart": "pm2 restart xpswap-api",
    "pm2:logs": "pm2 logs xpswap-api"
  },
  "dependencies": {
    "@tanstack/react-query": "^5.60.5",
    "ethers": "^6.14.3",
    "express": "^4.21.2",
    "express-rate-limit": "^8.0.1",
    "express-validator": "^7.2.1",
    "helmet": "^8.1.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^6.28.2",
    "axios": "^1.7.2",
    "lucide-react": "^0.453.0",
    "tailwind-merge": "^2.6.0",
    "clsx": "^2.1.1",
    "framer-motion": "^11.13.1",
    "lightweight-charts": "^5.0.8",
    "recharts": "^2.15.2",
    "wouter": "^3.3.5",
    "zod": "^3.24.2",
    "better-sqlite3": "^12.2.0",
    "drizzle-orm": "^0.39.3",
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "@types/node": "^20.16.11",
    "@types/express": "^4.17.21",
    "@types/react": "^18.3.11",
    "@types/react-dom": "^18.3.1",
    "@vitejs/plugin-react": "^4.3.2",
    "autoprefixer": "^10.4.20",
    "concurrently": "^8.2.2",
    "esbuild": "^0.25.0",
    "eslint": "^8.57.0",
    "postcss": "^8.4.47",
    "tailwindcss": "^3.4.17",
    "tsx": "^4.19.1",
    "typescript": "^5.6.3",
    "vite": "^5.4.14"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
