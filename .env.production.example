# XPSwap Production Environment Configuration
# Copy this file to .env.production and update with actual values

# Database Configuration
DATABASE_URL=postgresql://user:password@host:port/database
# For better performance in production, consider PostgreSQL or MySQL instead of SQLite

# API Keys (Replace with actual production keys)
COINMARKETCAP_API_KEY=your_production_api_key_here

# Security Configuration
SESSION_SECRET=generate_a_very_long_random_string_here_at_least_64_characters
MACHINE_ID=production-server-unique-id
VALID_API_KEYS=xps_prod_key_001,xps_prod_key_002

# Network Configuration
NODE_ENV=production
PORT=5000
HOST=0.0.0.0

# Xphere Network Configuration
XPHERE_RPC_URL=https://en-bkk.x-phere.com
XPHERE_CHAIN_ID=20250217

# HTTPS Configuration (Required for production)
HTTPS=true
SSL_CERT=/path/to/your/ssl/certificate.crt
SSL_KEY=/path/to/your/ssl/private.key

# Security Settings
SECURITY_LEVEL=MAXIMUM
RATE_LIMIT_ENABLED=true
IP_REPUTATION_ENABLED=true
CRYPTO_SECURITY_LEVEL=MAXIMUM
ERROR_LEAK_PREVENTION=true
DETAILED_ERRORS=false
SECURITY_LOGGING=true

# CORS Configuration
CORS_ORIGIN=https://trendy.storydot.kr,https://xpswap.com

# Logging Configuration
LOG_LEVEL=info
LOG_FILE_PATH=/var/log/xpswap/app.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=30
LOG_COMPRESSION=true

# Performance Settings
NODE_OPTIONS=--max-old-space-size=4096
CLUSTER_WORKERS=auto

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_INTERVAL=daily
BACKUP_RETENTION_DAYS=30
