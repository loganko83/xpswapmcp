# XPSwap Production Environment Configuration

# Server Configuration
PORT=5000
NODE_ENV=production

# Public URLs
PUBLIC_URL=/xpswap
API_BASE_URL=https://trendy.storydot.kr/xpswap/api

# CORS Settings
ALLOWED_ORIGINS=https://trendy.storydot.kr,https://xpswap.storydot.kr

# Security
SESSION_SECRET=generate-a-secure-random-string-here
JWT_SECRET=generate-another-secure-random-string-here

# Database (SQLite for now, can be changed to PostgreSQL later)
DATABASE_URL=file:./data/xpswap.db

# API Keys (Add your actual keys)
COINGECKO_API_KEY=
COINMARKETCAP_API_KEY=

# Blockchain RPC URLs
XPHERE_RPC_URL=https://rpc.xphere.io
ETHEREUM_RPC_URL=https://mainnet.infura.io/v3/YOUR-PROJECT-ID
BSC_RPC_URL=https://bsc-dataseed.binance.org/

# Contract Addresses (Update with actual deployed addresses)
XPSWAP_ROUTER_ADDRESS=0x0000000000000000000000000000000000000000
XPSWAP_FACTORY_ADDRESS=0x0000000000000000000000000000000000000000

# Features Toggle
ENABLE_TRADING=true
ENABLE_LIQUIDITY=true
ENABLE_STAKING=true
ENABLE_GOVERNANCE=false
ENABLE_ANALYTICS=true

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=./logs/xpswap.log
