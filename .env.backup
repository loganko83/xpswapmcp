# XPSwap 보안 강화 환경 설정 (개발용)
# 민감한 정보는 실제 환경에서만 설정하세요

# 데이터베이스 설정
DATABASE_URL=sqlite:./test.db

# API 키 (개발 환경 - 실제 키는 별도 관리)
COINMARKETCAP_API_KEY=YOUR_COINMARKETCAP_API_KEY_HERE
SESSION_SECRET=CHANGE_THIS_TO_RANDOM_STRING_IN_PRODUCTION

# 개발 환경 설정
NODE_ENV=development

# Xphere 네트워크 설정
XPHERE_RPC_URL=https://www.ankr.com/rpc/xphere/
XPHERE_CHAIN_ID=20250217

# 스마트 컨트랙트 설정 (개발용 - 테스트넷 키만 사용)
DEPLOYER_PRIVATE_KEY=YOUR_TESTNET_PRIVATE_KEY_HERE
GAS_PRICE=20000000000
GAS_LIMIT=8000000
REPORT_GAS=true

# 컨트랙트 주소 (배포 후 업데이트)
XPS_TOKEN_ADDRESS=
DEX_ROUTER_ADDRESS=
LIQUIDITY_POOL_ADDRESS=

# 로컬 개발 서버 설정
PORT=5000
HOST=localhost
BASE_PATH=

# 보안 설정 (개발 환경)
HTTPS=false
SECURITY_LEVEL=DEVELOPMENT
RATE_LIMIT_ENABLED=false
IP_REPUTATION_ENABLED=false
CRYPTO_SECURITY_LEVEL=LOW

# 에러 처리 설정
ERROR_LEAK_PREVENTION=true
DETAILED_ERRORS=true
SECURITY_LOGGING=true

# 외부 API 설정 (개발용 플레이스홀더)
VITE_INFURA_API_URL=https://mainnet.infura.io/v3/YOUR_INFURA_PROJECT_ID
VITE_ALCHEMY_API_URL=https://eth-mainnet.alchemyapi.io/v2/YOUR_ALCHEMY_API_KEY
VITE_LIFI_API_KEY=YOUR_LIFI_API_KEY
